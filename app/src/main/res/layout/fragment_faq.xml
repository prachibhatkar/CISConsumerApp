<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.essel.smartutilities.fragments.FAQFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/rel_image">
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_logo"
            />
    </RelativeLayout>


    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mini_layout_height"
        android:layout_marginTop="162dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/linear_layout_newconnection"
        android:layout_below="@id/rel_image"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Service Connection"
            android:textColor="@color/colorTextWhite"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_small"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mini_layout_height"
        android:layout_marginTop="200dp"
        android:layout_below="@+id/linear_layout_newconnection"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/linear_layout_changeownership"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change of Ownership"
            android:textColor="@color/colorTextWhite"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_small"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mini_layout_height"
        android:layout_marginTop="240dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/linear_layout_changeconnection"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Connection Type"
            android:textColor="@color/colorTextWhite"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_small"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mini_layout_height"
        android:layout_marginTop="280dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/linear_layout_loadextensionreduction"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load Extension Reduction"
            android:textColor="@color/colorTextWhite"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_small"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mini_layout_height"
        android:layout_marginTop="320dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/linear_layout_permanantdisconnection"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Permanant Disconnection"
            android:textColor="@color/colorTextWhite"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_small"/>


    </LinearLayout>


</FrameLayout>


