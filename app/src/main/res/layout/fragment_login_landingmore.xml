<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout android:id="@+id/main_section"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/menu_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TableLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shrinkColumns="*"
                    android:stretchColumns="*"
                    android:layout_margin="5dp"
                    android:id="@+id/layout_table"
                    >

                    <TableRow
                        android:layout_width="match_parent"
                        android:weightSum="3"
                        >

                        <LinearLayout
                            android:id="@+id/action_about_us"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimaryOverlay"
                            android:orientation="vertical"
                            android:padding="@dimen/margin_medium"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:layout_marginRight="2dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="60dp"
                                android:gravity="center">
                                <ImageView

                                    android:scaleType="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>


                            <TextView

                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="About Us"
                                android:gravity="center"
                                android:textColor="@color/colorTextWhite"
                                android:textSize="@dimen/text_size_h5" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/action_tips"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimaryOverlay"
                            android:orientation="vertical"
                            android:padding="7dp"


                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="60dp" android:gravity="center">
                                <ImageView

                                    android:scaleType="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>


                            <TextView

                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Tips"
                                android:gravity="center"
                                android:textColor="@color/colorTextWhite"
                                android:textSize="@dimen/text_size_h5" />

                        </LinearLayout>

                        <LinearLayout

                            android:id="@+id/action_my_traiff"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimaryOverlay"
                            android:orientation="vertical"
                            android:padding="@dimen/margin_medium"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="@dimen/margin_small"

                            >

                            <LinearLayout
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:minHeight="60dp" android:gravity="center">
                                <ImageView

                                    android:scaleType="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>


                            <TextView

                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Tariff"
                                android:gravity="center"
                                android:textColor="@color/colorTextWhite"
                                android:textSize="@dimen/text_size_h5" />

                        </LinearLayout>
                    </TableRow>
                    <TableRow
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:weightSum="3"
                        >

                        <LinearLayout
                            android:id="@+id/action_faq"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimaryOverlay"
                            android:orientation="vertical"
                            android:padding="@dimen/margin_medium"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:layout_marginRight="2dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="60dp"
                                android:gravity="center">
                                <ImageView

                                    android:scaleType="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>


                            <TextView

                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="FAQ"
                                android:gravity="center"
                                android:textColor="@color/colorTextWhite"
                                android:textSize="@dimen/text_size_h5" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/action_feedback"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimaryOverlay"
                            android:orientation="vertical"
                            android:padding="7dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="60dp"
                                android:gravity="center">
                                <ImageView

                                    android:scaleType="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>


                            <TextView

                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Feedback"
                                android:gravity="center"
                                android:textColor="@color/colorTextWhite"
                                android:textSize="@dimen/text_size_h5" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/action_share"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimaryOverlay"
                            android:orientation="vertical"
                            android:padding="@dimen/margin_medium"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="@dimen/margin_small"

                            >

                            <LinearLayout
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:minHeight="60dp"
                                android:gravity="center">
                                <ImageView

                                    android:scaleType="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>


                            <TextView

                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Share"
                                android:gravity="center"
                                android:textColor="@color/colorTextWhite"
                                android:textSize="@dimen/text_size_h5" />

                        </LinearLayout>
                    </TableRow>
                    <TableRow


                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:weightSum="3">

                        <LinearLayout
                            android:id="@+id/action_back_menu"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimaryOverlay"
                            android:orientation="vertical"
                            android:padding="@dimen/margin_medium"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:layout_marginRight="2dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="60dp"
                                android:gravity="center">
                                <ImageView

                                    android:scaleType="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>


                            <TextView

                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Back"
                                android:gravity="center"
                                android:textColor="@color/colorTextWhite"
                                android:textSize="@dimen/text_size_h5" />

                        </LinearLayout>



                    </TableRow>
                </TableLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </RelativeLayout>

    <!-- TODO: Update blank fragment layout -->




</LinearLayout>
