<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/welcome_bg">

<RelativeLayout
    android:id="@+id/main_section"
    android:layout_marginTop="@dimen/margin_large"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/advertise_view"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/black_overlay">
        <TextView
            android:textSize="@dimen/button_text_size_small"
            android:textColor="@color/colorTextWhite"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content" android:text="Manage your account?"/>

        <FrameLayout
            android:layout_marginLeft="@dimen/margin_small"
            android:id="@+id/frame_action_login"
            android:background="@drawable/hollow_rectanguler_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_medium"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:drawableRight="@drawable/ic_action_new_connection_arrow"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/title_login_button"
                android:textSize="@dimen/button_text_size_small"
                android:textColor="@color/colorTextWhite"/>
        </FrameLayout>
    </LinearLayout>
    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo"
        />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/menu_view"
        android:layout_above="@+id/advertise_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:gravity="center_horizontal" android:orientation="vertical">


        <TableLayout
            xmlns:android="http://schemas.android.com/apk/res/android"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            android:layout_margin="5dp">

            <TableRow

                android:layout_width="match_parent"
                android:weightSum="3"
                >

                <LinearLayout
                    android:id="@+id/action_quick_pay"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryOverlay"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_medium"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginRight="2dp"
                   >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="60dp" android:gravity="center">
                    <ImageView

                        android:src="@drawable/ic_share"
                        android:scaleType="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                    <TextView

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Quick Pay"
                        android:gravity="center"
                        android:textColor="@color/colorTextWhite"
                        android:textSize="@dimen/text_size_h5" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/action_apply_new_connection"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryOverlay"
                    android:orientation="vertical"
                    android:padding="7dp"


                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="60dp" android:gravity="center">
                        <ImageView

                            android:src="@drawable/ic_share"
                            android:scaleType="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                    <TextView

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Apply for New Connection"
                        android:gravity="center"
                        android:textColor="@color/colorTextWhite"
                        android:textSize="@dimen/text_size_h5" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/action_my_tarrifs"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryOverlay"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_medium"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="@dimen/margin_small"

                    >

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:minHeight="60dp" android:gravity="center">
                        <ImageView

                            android:src="@drawable/ic_share"
                            android:scaleType="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                    <TextView

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="My Tarrif"
                        android:gravity="center"
                        android:textColor="@color/colorTextWhite"
                        android:textSize="@dimen/text_size_h5" />

                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:weightSum="3"
                >

                <LinearLayout
                    android:id="@+id/action_tips"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryOverlay"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_medium"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginRight="2dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="60dp" android:gravity="center">
                        <ImageView

                            android:src="@drawable/ic_share"
                            android:scaleType="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                    <TextView

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Tips"
                        android:gravity="center"
                        android:textColor="@color/colorTextWhite"
                        android:textSize="@dimen/text_size_h5" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/action_about_us"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryOverlay"
                    android:orientation="vertical"
                    android:padding="7dp"


                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="60dp" android:gravity="center">
                        <ImageView

                            android:src="@drawable/ic_share"
                            android:scaleType="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                    <TextView

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="About Us"
                        android:gravity="center"
                        android:textColor="@color/colorTextWhite"
                        android:textSize="@dimen/text_size_h5" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/action_contact_us"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryOverlay"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_medium"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="@dimen/margin_small"

                    >

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:minHeight="60dp" android:gravity="center">
                        <ImageView

                            android:src="@drawable/ic_share"
                            android:scaleType="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                    <TextView

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Contact Us"
                        android:gravity="center"
                        android:textColor="@color/colorTextWhite"
                        android:textSize="@dimen/text_size_h5" />

                </LinearLayout>
            </TableRow>
            <TableRow

                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:weightSum="3"
                >

                <LinearLayout
                    android:id="@+id/action_faq"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryOverlay"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_medium"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginRight="2dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="60dp" android:gravity="center">
                        <ImageView

                            android:src="@drawable/ic_share"
                            android:scaleType="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                    <TextView

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="FAQ"
                        android:gravity="center"
                        android:textColor="@color/colorTextWhite"
                        android:textSize="@dimen/text_size_h5" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/action_feedback"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryOverlay"
                    android:orientation="vertical"
                    android:padding="7dp"


                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="60dp" android:gravity="center">
                        <ImageView

                            android:src="@drawable/ic_share"
                            android:scaleType="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                    <TextView

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Feedback"
                        android:gravity="center"
                        android:textColor="@color/colorTextWhite"
                        android:textSize="@dimen/text_size_h5" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/action_share"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryOverlay"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_medium"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="@dimen/margin_small"

                    >

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:minHeight="60dp" android:gravity="center">
                        <ImageView

                            android:src="@drawable/ic_share"
                            android:scaleType="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                    <TextView

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Share"
                        android:gravity="center"
                        android:textColor="@color/colorTextWhite"
                        android:textSize="@dimen/text_size_h5" />

                </LinearLayout>
            </TableRow>
        </TableLayout>




    </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/menu_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/button_text_size_small"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="CA Number"/>
        <Spinner

            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            ></Spinner>
    </LinearLayout>




</RelativeLayout>



</android.support.design.widget.CoordinatorLayout>