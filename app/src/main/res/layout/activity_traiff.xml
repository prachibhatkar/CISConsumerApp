<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_traiff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.essel.smartutilities.activity.TraiffActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/menu_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#b7b7b7">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title_table1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rate_schedule"
                    android:textSize="@dimen/text_size_h2"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:textColor="#000000"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_linear1"
                android:layout_below="@+id/title_table1"
                >
                <TableLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shrinkColumns="*"
                    android:stretchColumns="*"
                    android:layout_margin="2dp"
                    android:id="@+id/layout_table1"
                    >


                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:weightSum="2"
                        android:layout_marginBottom="@dimen/text_size_h8">

                        <TextView
                            android:id="@+id/consumption_slab1"
                            android:text="Consumption Slab(Wh)"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:textColor="#000000"
                            android:padding="20dip"
                            android:layout_marginRight="@dimen/text_size_h8"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/tv_bplcatagory"
                            android:text="BPL Category"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:textColor="#000000"
                            android:padding="20dip"
                            android:gravity="center"/>

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow2"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:weightSum="2"
                        android:layout_marginBottom="@dimen/text_size_h9">

                        <TextView
                            android:text="0-100 Units"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:textColor="#666666"
                            android:padding="20dip"
                            android:layout_marginRight="@dimen/text_size_h8"
                            android:gravity="center"/>

                        <TextView
                            android:text="3.76"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:textColor="#666666"
                            android:padding="20dip"
                            android:gravity="center"/>


                    </TableRow>
                    <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/R3C1"
                            android:text="Energy change"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:textColor="#666666"
                            android:padding="20dip"
                            android:layout_marginRight="@dimen/text_size_h8"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/R3C2"
                            android:text="0.87"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:textColor="#666666"
                            android:padding="20dip"
                            android:gravity="center"/>

                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_linear2"
                android:layout_below="@+id/layout_linear1"
                >

                <TableLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shrinkColumns="*"
                    android:stretchColumns="*"
                    android:layout_margin="2dp"
                    android:id="@+id/layout_table2"

                    >

                    <TableRow
                        android:id="@+id/table2"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:weightSum="2"
                        android:layout_marginBottom="@dimen/text_size_h8"
                        >

                        <TextView
                            android:id="@+id/consumption_slab2"
                            android:text="Consumption Slab(Wh)"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:textColor="#000000"
                            android:padding="20dip"
                            android:layout_marginRight="@dimen/text_size_h8"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/energy_charge"
                            android:text="Energy change(Rs/KWH)"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:textColor="#000000"
                            android:padding="20dip"
                            android:layout_marginRight="@dimen/text_size_h8"
                            android:gravity="center"/>

                    </TableRow>

                    <TableRow
                        android:id="@+id/table2Row1"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:weightSum="2"
                        android:layout_marginBottom="@dimen/text_size_h9"
                        >

                        <TextView
                            android:text="0-100 Units"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:textColor="#666666"
                            android:padding="20dip"
                            android:layout_marginRight="@dimen/text_size_h8"
                            android:gravity="center"/>

                        <TextView
                            android:text="3.76"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:textColor="#666666"
                            android:padding="20dip"
                            android:layout_marginRight="@dimen/text_size_h8"
                            android:gravity="center"/>

                    </TableRow>

                    <TableRow
                        android:id="@+id/table2Row2"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:weightSum="2"
                        android:layout_marginBottom="@dimen/text_size_h9"
                        >

                        <TextView
                            android:text="101-300 Units"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:textColor="#666666"
                            android:padding="20dip"
                            android:layout_marginRight="@dimen/text_size_h8"
                            android:gravity="center"/>

                        <TextView
                            android:text="7.21"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:textColor="#666666"
                            android:padding="20dip"
                            android:layout_marginRight="@dimen/text_size_h8"
                            android:gravity="center"/>

                    </TableRow>

                    <TableRow
                        android:id="@+id/table2Row3"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:weightSum="2"
                        android:layout_marginBottom="@dimen/text_size_h9"
                        >

                        <TextView
                            android:text="301-500 Units"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:textColor="#666666"
                            android:padding="20dip"
                            android:layout_marginRight="@dimen/text_size_h8"
                            android:gravity="center"/>

                        <TextView
                            android:text="9.21"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:textColor="#666666"
                            android:padding="20dip"
                            android:layout_marginRight="@dimen/text_size_h8"
                            android:gravity="center"/>

                    </TableRow>

                    <TableRow
                        android:id="@+id/table2Row4"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:weightSum="2"
                        android:layout_marginBottom="15dp"
                        >

                        <TextView
                            android:text="501-1000 Units"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:textColor="#666666"
                            android:padding="20dip"
                            android:layout_marginRight="@dimen/text_size_h8"
                            android:gravity="center"/>

                        <TextView
                            android:text="11.31"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:textColor="#666666"
                            android:padding="20dip"
                            android:layout_marginRight="@dimen/text_size_h8"
                            android:gravity="center"/>

                    </TableRow>

                    <TableLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:shrinkColumns="*"
                        android:stretchColumns="*"
                        android:layout_margin="2dp"
                        android:id="@+id/layout_table3"
                        >

                        <TableRow
                            android:id="@+id/table3"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:weightSum="1"
                            android:layout_marginBottom="@dimen/text_size_h8"

                            >

                            <TextView
                                android:id="@+id/fixed_demand_charge"
                                android:text="Fixed/Demand Charge"
                                android:layout_weight="1"
                                android:background="#ffffff"
                                android:textColor="#000000"
                                android:padding="20dip"
                                android:gravity="center"/>

                        </TableRow>

                        <TableRow
                            android:id="@+id/table3Row1"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:weightSum="1"
                            android:layout_marginBottom="@dimen/text_size_h9"

                            >
                            <TextView
                                android:id="@+id/single_phase"
                                android:text="Single Phase:Rs 50 per month"
                                android:layout_weight="1"
                                android:background="#ffffff"
                                android:textColor="#666666"
                                android:padding="20dip"
                                android:gravity="center"/>

                        </TableRow>
                        <TableRow
                            android:id="@+id/table3Row2"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:weightSum="1"
                            android:layout_marginBottom="15dp"
                            >

                            <TextView
                                android:id="@+id/three_phase"
                                android:text="Three Phase:Rs 150 per month"
                                android:layout_weight="1"
                                android:background="#ffffff"
                                android:textColor="#666666"
                                android:padding="20dip"
                                android:gravity="center"/>


                        </TableRow>
                    </TableLayout>
                </TableLayout>
            </LinearLayout>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
