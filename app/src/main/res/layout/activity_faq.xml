<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_faq"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.essel.smartutilities.activity.FAQActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/rel_image">
        <ImageView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop"
            android:src="@drawable/top_bg"
            app:layout_collapseMode="parallax"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">


    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mini_layout_height"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/linear_layout_newconnection"
        android:layout_below="@id/rel_image"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Service Connection"
            android:textColor="@color/colorTextWhite"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_small"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mini_layout_height"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/linear_layout_newconnection"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/linear_layout_changeownership"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change of Ownership"
            android:textColor="@color/colorTextWhite"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_small"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mini_layout_height"
        android:layout_marginTop="3dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/linear_layout_changeconnection"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Connection Type"
            android:textColor="@color/colorTextWhite"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_small"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mini_layout_height"
        android:layout_marginTop="3dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/linear_layout_loadextensionreduction"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load Extension Reduction"
            android:textColor="@color/colorTextWhite"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_small"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mini_layout_height"
        android:layout_marginTop="3dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/linear_layout_permanantdisconnection"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Permanant Disconnection"
            android:textColor="@color/colorTextWhite"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_small"/>


    </LinearLayout>


</LinearLayout>
</LinearLayout>
