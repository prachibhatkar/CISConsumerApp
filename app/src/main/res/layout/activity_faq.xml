<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_faq"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.essel.smartutilities.activity.FAQActivity">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:layout_scrollFlags="scroll|enterAlways|snap"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_name" />

            <TextView
                android:id="@+id/title_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="FAQ"
                android:textColor="#ffffff"
                android:textSize="20dp" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/expandableButton_newconnection"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black_overlay"
                    android:paddingRight="10dp"
                    android:text="New Service Connection"
                    android:textColor="@color/colorPrimaryDarkText" />

                <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                    android:id="@+id/expandableLayout_newconnection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ael_expanded="false"
                    app:ael_orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_newconnection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:lines="10"
                            android:maxLines="10"
                            android:singleLine="false"
                            android:text=" New Service Connection" />


                    </LinearLayout>


                </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/expandableButton_changeofowner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black_overlay"
                    android:paddingRight="10dp"
                    android:text="Change of OwnerShip"
                    android:textColor="@color/colorPrimaryDarkText" />

                <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                    android:id="@+id/expandableLayout_changeofownership"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:ael_expanded="false"
                    app:ael_orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_changeofownership"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:lines="10"
                            android:text="Change of OwnerShip" />


                    </LinearLayout>

                </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/expandableButton_changeofconnection"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black_overlay"
                    android:paddingRight="10dp"
                    android:text="Change of Connection Type"
                    android:textColor="@color/colorPrimaryDarkText" />

                <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                    android:id="@+id/expandableLayout_changeofconnection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ael_expanded="false"
                    app:ael_orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_changeofconnectiontype"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" Change of Connection Typejhbofgnbnfgnbfdnvbnfnbvfdnvbkjfdnovnodnvbfdnnfonvofdnvoifnvoinfdionvoifnvfhuifdfidgfd
                           fjbvjikfjbvkdbjvbdjkbvjbvkjbsdlkjabjkdbsvjkbsdkjlvbkjdsbvkjbdskjvb h" />


                    </LinearLayout>

                </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/expandableButton_loadextensionreduction"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/black_overlay"
                        android:paddingRight="10dp"
                        android:text="Load Extension Reduction"
                        android:textColor="@color/colorPrimaryDarkText" />

                    <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                        android:id="@+id/expandableLayout_loadextensionreduction"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:ael_expanded="false"
                        app:ael_orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_loadextensionreduction"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=" Load Extension Reduction" />


                        </LinearLayout>

                    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/expandableButton_permanantdisconnect"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/black_overlay"
                        android:paddingRight="10dp"
                        android:text="Permanant Disconnection"
                        android:textColor="@color/colorPrimaryDarkText" />

                    <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                        android:id="@+id/expandableLayout_permanantdisconnect"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:ael_expanded="false"
                        app:ael_orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_permanantdisconnect"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=" Permanant Disconnection" />


                        </LinearLayout>

                    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>
