<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main_section"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/menu_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/layout_table"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:shrinkColumns="*"
                    android:stretchColumns="*">

                    <TableRow
                        android:layout_width="match_parent"
                        android:weightSum="4">

                        <LinearLayout
                            android:id="@+id/action_about_us"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:background="@color/colorPrimaryOverlay"
                            android:orientation="vertical"
                            android:padding="@dimen/margin_medium">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:minHeight="60dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:scaleType="center" />
                            </LinearLayout>


                            <TextView

                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="About Us"
                                android:textColor="@color/colorTextWhite"
                                android:textSize="@dimen/text_size_h5" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/action_tips"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorPrimaryOverlay"
                            android:orientation="vertical"
                            android:padding="7dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:minHeight="60dp">

                                <ImageView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:scaleType="center" />
                            </LinearLayout>


                            <TextView

                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="Tips"
                                android:textColor="@color/colorTextWhite"
                                android:textSize="@dimen/text_size_h5" />

                        </LinearLayout>

                        <LinearLayout

                            android:id="@+id/action_my_traiff"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="@dimen/margin_small"
                            android:layout_weight="1"
                            android:background="@color/colorPrimaryOverlay"
                            android:orientation="vertical"
                            android:padding="@dimen/margin_medium"

                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:minHeight="60dp">

                                <ImageView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:scaleType="center" />
                            </LinearLayout>


                            <TextView

                                android:id="@+id/textView"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="Tariff"
                                android:textColor="@color/colorTextWhite"
                                android:textSize="@dimen/text_size_h5" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/action_faq"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="-4dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:background="@color/colorPrimaryOverlay"
                            android:orientation="vertical"
                            android:padding="@dimen/margin_medium">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:minHeight="60dp">

                                <ImageView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:scaleType="center" />
                            </LinearLayout>


                            <TextView

                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="FAQ"
                                android:textColor="@color/colorTextWhite"
                                android:textSize="@dimen/text_size_h5" />

                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_marginTop="2dp"
                        android:weightSum="4">

                        <LinearLayout
                            android:id="@+id/action_feedback"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:background="@color/colorPrimaryOverlay"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:minHeight="60dp">

                                <ImageView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:scaleType="center" />
                            </LinearLayout>

                            <TextView

                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="Feedback"
                                android:textColor="@color/colorTextWhite"
                                android:textSize="@dimen/text_size_h5" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/action_share"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="@dimen/margin_small"
                            android:layout_weight="1"
                            android:background="@color/colorPrimaryOverlay"
                            android:orientation="vertical"
                            android:padding="@dimen/margin_medium">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:minHeight="60dp">

                                <ImageView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:scaleType="center" />
                            </LinearLayout>


                            <TextView

                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="Share"
                                android:textColor="@color/colorTextWhite"
                                android:textSize="@dimen/text_size_h5" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/action_back_menu"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="-3dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:background="@color/colorPrimaryOverlay"
                            android:orientation="vertical"
                            android:padding="@dimen/margin_medium">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:minHeight="60dp">

                                <ImageView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:scaleType="center" />
                            </LinearLayout>


                            <TextView

                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="Back"
                                android:textColor="@color/colorTextWhite"
                                android:textSize="@dimen/text_size_h5" />

                        </LinearLayout>


                    </TableRow>
                </TableLayout>


            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </RelativeLayout>


</LinearLayout>
