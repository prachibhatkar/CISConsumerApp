<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputLayoutamtountpaying"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/view">

        <EditText
            android:id="@+id/amt_paying"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Amount Paying"
            android:imeActionId="@+id/login"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:textSize="@dimen/edit_text_size_medium"

            />

    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/BTNSubmit"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height_small"
        android:layout_below="@+id/inputLayoutamtountpaying"
        android:text="Pay Now"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorTextWhite"
        android:textSize="@dimen/button_text_size_small" />

    <RelativeLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/toolbar"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/rs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs"
                android:textColor="@color/colorTextWhite"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/currentamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="250"
                android:textColor="@color/colorTextWhite"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/lblcurrentamt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Current Amount"
                android:textColor="@color/colorTextWhite" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/rl1"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs"
                android:textColor="@color/colorTextWhite"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/Arriers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="250"
                android:textColor="@color/colorTextWhite"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/lblarries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Arriers"
                android:textColor="@color/colorTextWhite" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs"
                android:textColor="@color/colorTextWhite"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/netamt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="250"
                android:textColor="@color/colorTextWhite"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/lblnetamt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Net Amount"
                android:textColor="@color/colorTextWhite" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="80dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs"
                android:textColor="@color/colorTextWhite"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/promptamt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="250"
                android:textColor="@color/colorTextWhite"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/lblpromptamt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Prompt Amount"
                android:textColor="@color/colorTextWhite" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="80dp">

            <TextView
                android:id="@+id/duedate_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aug"
                android:textColor="@color/colorTextWhite"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/duedate_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="25,2050"
                android:textColor="@color/colorTextWhite"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/lblduedate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Due Date"
                android:textColor="@color/colorTextWhite" />
        </RelativeLayout>
    </RelativeLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:layout_scrollFlags="scroll|enterAlways|snap"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!--<ImageView-->
            <!--android:id="@+id/img_back"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@drawable/ic_action_back" />-->

            <TextView
                android:id="@+id/title_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Pay Now"
                android:textColor="#ffffff"
                android:textSize="14sp" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

</RelativeLayout>