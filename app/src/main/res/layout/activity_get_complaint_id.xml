<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_get_complaint_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.essel.smartutilities.activity.GetComplaintIdActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_complaintmsg"
            android:text="Your Complaint Registered with us "/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_complaintid"
            android:text="Complaint Id:5478124589 "/>

</LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_submitcomplaintid"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height_small"
        android:background="@drawable/red_button_rounded"
        android:layout_marginLeft="@dimen/margin_medium"
        android:text="OK"
        android:textAllCaps="false"
        android:textAppearance="@style/AlertDialog.AppCompat.Light"
        android:textColor="@color/colorTextWhite"
        android:textSize="@dimen/button_text_size_small"
        android:layout_below="@+id/inputLayoutremark"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />







</LinearLayout>
