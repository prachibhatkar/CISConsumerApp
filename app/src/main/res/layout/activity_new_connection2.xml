<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.NewConnectionActivity">
    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:layout_scrollFlags="scroll|enterAlways|snap"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!--<ImageView-->
            <!--android:id="@+id/img_back"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@drawable/ic_action_back" />-->

            <TextView
                android:id="@+id/title_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="New Connection"
                android:textColor="#ffffff"
                android:textSize="14sp" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/toolbar">

    <LinearLayout
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical"
        android:padding="@dimen/margin_large">

        <TextView
            android:id="@+id/msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanks for Applying new Connection.We will connect with you soon. "
            android:textSize="@dimen/button_text_size_medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Consumername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:text="Barry Alen"
            android:textSize="@dimen/button_text_size_small" />

        <TextView
            android:id="@+id/connectiontype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:text="Connection : Residential"
            android:textSize="@dimen/button_text_size_small" />

        <TextView
            android:id="@+id/ConsumerMobileNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Number : 959XXXX117"
            android:textSize="@dimen/button_text_size_small" />

        <TextView
            android:id="@+id/ConsumerEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: bkashxbdv@gmail.com"
            android:textSize="@dimen/button_text_size_small" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_gotologin"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="20dp"
        android:background="@drawable/red_button_rounded"
        android:text="Go To Login"
        android:textAppearance="@style/AlertDialog.AppCompat.Light"
        android:textColor="@color/colorTextWhite"
        android:textSize="@dimen/button_text_size_medium" />


     <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_continuasguest"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="20dp"
        android:background="@drawable/red_button_rounded"
        android:text="Continue As Guest"
        android:layout_marginLeft="80dp"
         android:padding="10dp"
        android:textAppearance="@style/AlertDialog.AppCompat.Light"
        android:textColor="@color/colorTextWhite"
        android:textSize="@dimen/button_text_size_medium" />
    </LinearLayout>
</LinearLayout>
    </RelativeLayout>