<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:layout_scrollFlags="scroll|enterAlways|snap"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_name" />

            <TextView
                android:id="@+id/title_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Register"
                android:textColor="#ffffff"
                android:textSize="14sp" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/margin_large">

        <TextView
            android:id="@+id/textConsumerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ashu Singh"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/button_text_size_medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textConsumerAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:maxLines="3"
            android:text="15, Plot A, Mohan nagar, Industrial Area, Sahibabad, Gaziyabad, Uttar Pradesh - 201302"
            android:textAlignment="center"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/button_text_size_small" />

        <TextView
            android:id="@+id/textConsumerConnectionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:text="Connection - Residential"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/button_text_size_small" />

        <TextView
            android:id="@+id/textConsumerMobileNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Number - 959XXXX117"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/button_text_size_small" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardview"
        android:orientation="vertical"
        android:padding="@dimen/margin_large">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Congratulations !"
            android:textSize="@dimen/button_text_size_medium"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have been Successfully registered"
            android:textSize="@dimen/button_text_size_small" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:text="You can Login with your"
            android:textSize="@dimen/button_text_size_small" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbl_consumerno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="Consumer No: "
                android:textSize="@dimen/button_text_size_small" />

            <TextView
                android:id="@+id/consumerno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="5463451431513"
                android:textSize="@dimen/button_text_size_small" />


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:text="OR"
            android:textSize="@dimen/button_text_size_small" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbl_mobileno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="Mobile No: "
                android:textSize="@dimen/button_text_size_small" />

            <TextView
                android:id="@+id/ConsumerMobileNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="546345151"
                android:textSize="@dimen/button_text_size_small" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_continue"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="20dp"
                android:background="@drawable/red_button_rounded"
                android:text="Continue"
                android:textAppearance="@style/AlertDialog.AppCompat.Light"
                android:textColor="@color/colorTextWhite"
                android:textSize="@dimen/button_text_size_medium" />


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_addmore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/red_button_rounded"
                android:padding="10dp"
                android:text="Add More Account"
                android:textAppearance="@style/AlertDialog.AppCompat.Light"
                android:textColor="@color/colorTextWhite"
                android:textSize="@dimen/button_text_size_medium" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
