<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_get_complaint_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bynry.cisconsumerapp.com.essel.cisconsumerapp.activity.GetComplaintIdActivity">
    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:layout_scrollFlags="scroll|enterAlways|snap"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_name"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/title_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Complaints"
                android:textColor="#ffffff"
                android:textSize="20dp" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_complaintmsg"
            android:text="Your Complaint Registered with us "/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lbl_complaintid"
            android:text="Complaint ID: "/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_complaintid"
                android:text=" "/>


        </LinearLayout>



    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_submitcomplaintid"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height_small"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="@dimen/margin_medium"
        android:text="OK"
        android:textAllCaps="false"
        android:textAppearance="@style/AlertDialog.AppCompat.Light"
        android:textColor="@color/colorTextWhite"
        android:textSize="@dimen/button_text_size_small"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

</LinearLayout>
</LinearLayout>
