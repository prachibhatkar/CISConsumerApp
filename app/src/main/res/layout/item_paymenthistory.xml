<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginStart="5dp"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <!--<View-->
            <!--android:id="@+id/v_circle"-->
            <!--android:layout_width="25dp"-->
            <!--android:layout_height="25dp"-->
            <!--android:background="@drawable/circle_paymenthistory" />-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/tv_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="3dp"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:text="Jun 2016"
                    android:textSize="18dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_paymentdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:padding="3dp"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:text="16 Jun 10.25am" />
                <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="2dp"-->
                <!--android:background="@color/circle_open" />-->

                <TextView
                    android:id="@+id/lblamountpaid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:padding="3dp"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:text="Amount Paid" />

                <TextView
                    android:id="@+id/amountpaid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/lbl_transationid"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="60dp"
                    android:padding="3dp"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:text="2540.56" />

                <TextView
                    android:id="@+id/lbl_transationid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:padding="3dp"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/transactionid" />

                <TextView
                    android:id="@+id/transationid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/lbl_transationid"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="30dp"
                    android:padding="3dp"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:text="613116" />

                <ImageView
                    android:id="@+id/iv_paymentmode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@android:drawable/ic_menu_gallery" />

                <TextView
                    android:id="@+id/lbl_paymentmode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="30dp"
                    android:padding="3dp"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:text="Cash" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>