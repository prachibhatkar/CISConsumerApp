<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_service_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.essel.smartutilities.activity.ServiceStatusActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear_lay_text">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_message"
            android:text="fdsa"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_service_id"
            android:text="bjhk"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_time_csd_center"
            android:text="gjhkkl"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_lay_buttons"
        android:orientation="horizontal">

        <Button
        android:layout_width="100dp"
        android:layout_height="@dimen/button_height"
        android:id="@+id/btn_service_status_continue"
        android:background="@drawable/red_button_rounded"
        android:text="Continue"
        android:textColor="@color/colorTextWhite"
        android:textAlignment="center"
            android:layout_marginLeft="5dp"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="@dimen/button_height"
            android:id="@+id/btn_locate_us"
            android:background="@drawable/red_button_rounded"
            android:text="Locate Us"
            android:textColor="@color/colorTextWhite"
            android:textAlignment="center"
            android:layout_marginLeft="20dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/container"
        android:orientation="vertical"/>




</LinearLayout>
