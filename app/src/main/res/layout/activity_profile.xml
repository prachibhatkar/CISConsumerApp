<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.essel.smartutilities.activity.ProfileActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/margin_large">

            <TextView
                android:id="@+id/textConsumerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ashu Singh"
                android:textColor="@color/colorTextWhite"
                android:textSize="@dimen/button_text_size_medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textConsumerAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:layout_marginTop="@dimen/margin_small"
                android:text="15, Plot A, Mohan nagar, Industrial Area, Sahibabad, Gaziyabad, Uttar Pradesh - 201302"
                android:textAlignment="center"
                android:textColor="@color/colorTextWhite"
                android:textSize="@dimen/button_text_size_small" />

            <TextView
                android:id="@+id/textConsumerConnectionType"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connection - Residential"
                android:textColor="@color/colorTextWhite"
                android:textSize="@dimen/button_text_size_small" />

            <TextView
                android:id="@+id/textConsumerMobileNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Number - 959XXXX117"
                android:textColor="@color/colorTextWhite"
                android:textSize="@dimen/button_text_size_small" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/expandableButton_editprofile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/black_overlay"
                android:paddingRight="10dp"
                android:text="Edit Profile"
                android:textColor="@color/colorPrimaryDarkText"/>

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:id="@+id/expandableLayout_editprofile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:ael_expanded="false"
                android:paddingLeft="16dp"
                app:ael_orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/consumer_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/prompt_consumer_id"
                        android:inputType="number"
                        android:maxLines="1"
                        android:paddingTop="20dp"
                        android:singleLine="true"
                        android:textSize="14dp"
                        />
                    <EditText
                        android:id="@+id/cosumer_email_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/prompt_consumer_email_id"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:paddingTop="@dimen/margin_large"
                        android:singleLine="true"
                        android:textSize="@dimen/edit_text_size_medium"
                        />



                    <Button
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:id="@+id/BTN_save_details"
                        android:text="@string/save_details"
                        android:textSize="@dimen/button_text_size_medium"
                        android:background="@color/colorPrimaryDark"
                        android:textColor="@color/colorTextWhite"/>

                </LinearLayout>

            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

        <Button
            android:id="@+id/expandableButton_changepass"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expandableLayout1"
            android:background="@color/black_overlay"
            android:paddingRight="10dp"
            android:text="Change Password"
            android:textColor="@color/colorPrimaryDarkText"/>

        <com.github.aakira.expandablelayout.ExpandableRelativeLayout
            android:id="@+id/expandableLayout_changepass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            app:ael_expanded="false"
            app:ael_orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_large">


                <EditText
                    android:id="@+id/editOldPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_old_password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="@dimen/edit_text_size_medium"
                    />

                <EditText
                    android:id="@+id/editNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_new_password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="@dimen/edit_text_size_medium"
                    />

                <EditText
                    android:id="@+id/editConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_confirm_password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="@dimen/edit_text_size_medium"
                    />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:id="@+id/BTN_save_password"
                    android:text="@string/save_details"
                    android:textSize="@dimen/button_text_size_medium"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/colorTextWhite"/>

            </LinearLayout>


        </com.github.aakira.expandablelayout.ExpandableRelativeLayout>


        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>


</LinearLayout>
