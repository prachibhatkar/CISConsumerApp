<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_traiff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.essel.smartutilities.activity.TraiffActivity">
    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:layout_scrollFlags="scroll|enterAlways|snap"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_name" />

            <TextView
                android:id="@+id/title_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Traiff"
                android:textColor="#ffffff"
                android:textSize="20dp" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/menu_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title_table1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rate_schedule"
                android:textSize="@dimen/text_size_h2"
                android:layout_marginTop="@dimen/margin_medium"
                android:textColor="#000000"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/layout_linear1"
            android:layout_below="@+id/title_table1"
            >
            <TableLayout
                xmlns:android="http://schemas.android.com/apk/res/android"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shrinkColumns="*"
                android:stretchColumns="*"
                android:layout_margin="2dp"
                android:id="@+id/layout_table1"
                >


                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:layout_marginBottom="@dimen/text_size_h8">

                    <TextView
                        android:id="@+id/consumption_slab1"
                        android:text="Consumption Slab(Wh)"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:textColor="#000000"
                        android:padding="20dip"
                        android:layout_marginRight="@dimen/text_size_h8"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/tv_bplcatagory"
                        android:text="BPL Category"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:textColor="#000000"
                        android:padding="20dip"
                        android:gravity="center"/>

                </TableRow>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black_overlay">


                </View>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:layout_marginBottom="@dimen/text_size_h9">

                    <TextView
                        android:text=""
                        android:id="@+id/tv_fixeddemandcharge"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:textColor="#666666"
                        android:padding="20dip"
                        android:layout_marginRight="@dimen/text_size_h8"
                        android:gravity="center"/>

                    <TextView
                        android:text=""
                        android:id="@+id/tv_bplcatagory1"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:textColor="#666666"
                        android:padding="20dip"
                        android:gravity="center"/>


                </TableRow>
                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tv_energycharge"
                        android:text=""
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:textColor="#666666"
                        android:padding="20dip"
                        android:layout_marginRight="@dimen/text_size_h8"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tv_bplcatagory2"
                        android:text=""
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:textColor="#666666"
                        android:padding="20dip"
                        android:gravity="center"/>

                </TableRow>
            </TableLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_linear2"
            android:layout_below="@+id/layout_linear1"
            >

            <TableLayout
                xmlns:android="http://schemas.android.com/apk/res/android"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shrinkColumns="*"
                android:stretchColumns="*"
                android:layout_margin="2dp"
                android:id="@+id/layout_table2"

                >

                <TableRow
                    android:id="@+id/table2"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:layout_marginBottom="@dimen/text_size_h8"
                    >

                    <TextView
                        android:id="@+id/consumption_slab2"
                        android:text="Consumption Slab(Wh)"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:textColor="#000000"
                        android:padding="20dip"
                        android:layout_marginRight="@dimen/text_size_h8"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/energy_charge"
                        android:text="Energy charge(Rs/kWh)"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:textColor="#000000"
                        android:padding="20dip"
                        android:layout_marginRight="@dimen/text_size_h8"
                        android:gravity="center"/>

                </TableRow>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black_overlay">


                </View>

                <TableRow
                    android:id="@+id/table2Row1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:layout_marginBottom="@dimen/text_size_h9"
                    >

                    <TextView
                        android:text=""
                        android:id="@+id/tv_100units"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:textColor="#666666"
                        android:padding="20dip"
                        android:layout_marginRight="@dimen/text_size_h8"
                        android:gravity="center"/>

                    <TextView
                        android:text=""
                        android:id="@+id/tv_energycharge1"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:textColor="#666666"
                        android:padding="20dip"
                        android:layout_marginRight="@dimen/text_size_h8"
                        android:gravity="center"/>

                </TableRow>

                <TableRow
                    android:id="@+id/table2Row2"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:layout_marginBottom="@dimen/text_size_h9"
                    >

                    <TextView
                        android:text=""
                        android:id="@+id/tv_300units"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:textColor="#666666"
                        android:padding="20dip"
                        android:layout_marginRight="@dimen/text_size_h8"
                        android:gravity="center"/>

                    <TextView
                        android:text=""
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:textColor="#666666"
                        android:padding="20dip"
                        android:layout_marginRight="@dimen/text_size_h8"
                        android:gravity="center"
                        android:id="@+id/tv_energycharge2" />

                </TableRow>

                <TableRow
                    android:id="@+id/table2Row3"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:layout_marginBottom="@dimen/text_size_h9"
                    >

                    <TextView
                        android:text=""
                        android:id="@+id/tv_500units"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:textColor="#666666"
                        android:padding="20dip"
                        android:layout_marginRight="@dimen/text_size_h8"
                        android:gravity="center"/>

                    <TextView
                        android:text=""
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:textColor="#666666"
                        android:padding="20dip"
                        android:id="@+id/tv_energycharge3"
                        android:layout_marginRight="@dimen/text_size_h8"
                        android:gravity="center"/>

                </TableRow>

                <TableRow
                    android:id="@+id/table2Row4"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:layout_marginBottom="15dp"
                    >

                    <TextView
                        android:text=""
                        android:id="@+id/tv_1000units"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:textColor="#666666"
                        android:padding="20dip"
                        android:layout_marginRight="@dimen/text_size_h8"
                        android:gravity="center"/>

                    <TextView
                        android:text=""
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:textColor="#666666"
                        android:padding="20dip"
                        android:id="@+id/tv_energycharge4"
                        android:layout_marginRight="@dimen/text_size_h8"
                        android:gravity="center"/>

                </TableRow>



                <TableLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shrinkColumns="*"
                    android:stretchColumns="*"
                    android:layout_margin="2dp"
                    android:id="@+id/layout_table3"
                    >

                    <TableRow
                        android:id="@+id/table3"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:layout_marginBottom="@dimen/text_size_h8"

                        >

                        <TextView
                            android:id="@+id/fixed_demand_charge"
                            android:text="Fixed/Demand Charge"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:textColor="#000000"
                            android:padding="20dip"
                            />

                        <TextView
                            android:id="@+id/fixed_demand_charge1"
                            android:text="Rs/Month"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:textColor="#000000"
                            android:padding="20dip"
                            />




                    </TableRow>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/black_overlay">

                    </View>

                    <TableRow
                        android:id="@+id/table3Row1"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:layout_marginBottom="@dimen/text_size_h9"

                        >
                        <TextView
                            android:id="@+id/single_phase"
                            android:text=" "
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:textColor="#666666"
                            android:padding="20dip"
                           />
                        <TextView
                            android:id="@+id/single_phase_rs"
                            android:text=""
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:textColor="#666666"
                            android:padding="20dip"
                            />

                    </TableRow>
                    <TableRow
                        android:id="@+id/table3Row2"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:layout_marginBottom="15dp"
                        >

                        <TextView
                            android:id="@+id/three_phase"
                            android:text=""
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:textColor="#666666"
                            android:padding="20dip"
                           />
                        <TextView
                            android:id="@+id/three_phase_rs"
                            android:text=""
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:textColor="#666666"
                            android:padding="20dip"
                            />


                    </TableRow>
                </TableLayout>
            </TableLayout>
        </LinearLayout>
    </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
</LinearLayout>
